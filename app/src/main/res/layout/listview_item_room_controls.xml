<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/spacing_medium"
        app:cardElevation="@dimen/spacing_xsmall"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="13dp"
            android:layout_marginTop="13dp"
            android:orientation="horizontal"
            android:paddingBottom="7dp"
            android:paddingLeft="13dp"
            android:paddingRight="13dp"
            android:paddingTop="7dp"
            android:weightSum="2">

            <ImageView
                android:id="@+id/iv_applianceImage"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_bulb"
                android:tint="@color/colorPrimaryLight" />

            <TextView
                android:id="@+id/tv_applianceName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1.7"
                android:paddingLeft="21dp"
                android:text="Appliance" />

            <TextView
                android:id="@+id/tv_on_off_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:gravity="center"
                android:text="ON"
                android:textAppearance="?android:textAppearance"
                android:textColor="@color/grey_dark"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_power_on_off"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_switch_off" />
        </LinearLayout>

    </android.support.v7.widget.CardView>


</LinearLayout>